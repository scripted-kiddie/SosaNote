{
  "manifest_version": 3,
  "name": "SosaNote",
  "version": "2",
  "description": "Store local notes per website domain.",
  "permissions": ["storage", "tabs", "activeTab"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
